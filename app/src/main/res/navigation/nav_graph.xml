<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainMenuFragment">
    <fragment
        android:id="@+id/mainMenuFragment"
        android:name="com.example.themovie.view.fragment.MainMenuFragment"
        android:label="fragment_main_menu"
        tools:layout="@layout/fragment_main_menu" >
        <action
            android:id="@+id/action_mainMenuFragment_to_theMovieDBFragment"
            app:destination="@id/theMovieDBFragment" />
        <action
            android:id="@+id/action_mainMenuFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
    </fragment>
    <fragment
        android:id="@+id/theMovieDBFragment"
        android:name="com.example.themovie.view.fragment.TheMovieDBFragment"
        android:label="fragment_the_movie_d_b"
        tools:layout="@layout/fragment_the_movie_d_b" />
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.themovie.view.fragment.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" />
</navigation>
